<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_header"
        android:layout_width="@dimen/icon_layout_location_size"
        android:layout_height="@dimen/icon_layout_location_size"
        android:src="@drawable/ic_account_circle"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="@dimen/activity_horizontal_margin1"
        android:layout_marginRight="@dimen/activity_horizontal_margin1"
        android:layout_marginTop="@dimen/activity_horizontal_margin1"
        android:layout_marginBottom="@dimen/activity_horizontal_margin1"

        />
    <TextView
        android:id="@+id/text_name"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Moshi Moshi"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_show_more"
        android:padding="@dimen/activity_horizontal_margin1"
        android:layout_width="match_parent"
        android:layout_gravity="right|center"
        android:gravity="right|end"
        android:text="Ver Restaurante >"
        android:clickable="true"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content" />

</LinearLayout>