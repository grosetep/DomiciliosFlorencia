<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal" >

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_search"
            android:background="@drawable/layout_rounded_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_weight="100"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_search"
                android:layout_width="@dimen/icon_toolbar_size"
                android:layout_height="@dimen/icon_toolbar_size"
                android:src="@drawable/ic_action_search"
                android:tint="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:clickable="true"
                />

            <EditText
                android:id="@+id/text_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/promt_search_services"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:focusable="true"
                android:clickable="true"
                android:imeOptions="actionSearch"
                android:padding="4dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="0.9"/>
            <ImageView
                android:id="@+id/text_cancel"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="@dimen/icon_toolbar_size"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="@dimen/icon_toolbar_size"
                android:src="@drawable/ic_action_cancel"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical"
                android:tint="@color/gray"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/image_cart"
            android:layout_width="wrap_content"
            android:padding="@dimen/activity_horizontal_margin1"
            android:layout_marginRight="@dimen/activity_horizontal_margin4"
            android:layout_marginLeft="@dimen/activity_horizontal_margin4"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_shopping_cart"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>